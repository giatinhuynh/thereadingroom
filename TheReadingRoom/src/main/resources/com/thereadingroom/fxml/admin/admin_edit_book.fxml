<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!-- VBox container for the form, including form fields and buttons -->
<VBox spacing="30" xmlns:fx="http://javafx.com/fxml" fx:controller="com.thereadingroom.controller.admin.AdminEditBookController"
	  style="-fx-padding: 40; -fx-background-color: #f4e1c1; -fx-alignment: CENTER;">

	<!-- Label for the form title -->
	<Label text="Add New Book"
		   style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #8b4513;" />

	<!-- VBox to hold form fields for adding a book (Title, Author, Stock, etc.) -->
	<VBox spacing="15" alignment="CENTER_LEFT">
		<!-- Label and TextField for the Book Title -->
		<Label text="Title" style="-fx-font-weight: bold; -fx-font-size: 16px;" />
		<TextField fx:id="titleField" style="
            -fx-pref-width: 300px;
            -fx-padding: 10 15;
            -fx-background-radius: 20;
            -fx-border-radius: 20;
            -fx-border-color: #d2691e;
            -fx-border-width: 2px;
            -fx-background-color: #ffffff;" />

		<!-- Label and TextField for the Book Author -->
		<Label text="Author" style="-fx-font-weight: bold; -fx-font-size: 16px;" />
		<TextField fx:id="authorField" style="
            -fx-pref-width: 300px;
            -fx-padding: 10 15;
            -fx-background-radius: 20;
            -fx-border-radius: 20;
            -fx-border-color: #d2691e;
            -fx-border-width: 2px;
            -fx-background-color: #ffffff;" />

		<!-- Label and TextField for Book Stock (Physical Copies) -->
		<Label text="Stock (Physical Copies)" style="-fx-font-weight: bold; -fx-font-size: 16px;" />
		<TextField fx:id="stockField" style="
            -fx-pref-width: 300px;
            -fx-padding: 10 15;
            -fx-background-radius: 20;
            -fx-border-radius: 20;
            -fx-border-color: #d2691e;
            -fx-border-width: 2px;
            -fx-background-color: #ffffff;" />

		<!-- Label and TextField for Book Price -->
		<Label text="Price" style="-fx-font-weight: bold; -fx-font-size: 16px;" />
		<TextField fx:id="priceField" style="
            -fx-pref-width: 300px;
            -fx-padding: 10 15;
            -fx-background-radius: 20;
            -fx-border-radius: 20;
            -fx-border-color: #d2691e;
            -fx-border-width: 2px;
            -fx-background-color: #ffffff;" />

		<!-- Label and TextField for Sold Copies -->
		<Label text="Sold Copies" style="-fx-font-weight: bold; -fx-font-size: 16px;" />
		<TextField fx:id="soldCopiesField" style="
            -fx-pref-width: 300px;
            -fx-padding: 10 15;
            -fx-background-radius: 20;
            -fx-border-radius: 20;
            -fx-border-color: #d2691e;
            -fx-border-width: 2px;
            -fx-background-color: #ffffff;" />
	</VBox>

	<!-- HBox container for the action buttons (Save and Cancel) -->
	<HBox alignment="CENTER" spacing="15">
		<!-- Save Button for saving the book -->
		<Button text="Save" onAction="#handleSaveBook" style="
            -fx-background-color: #228b22;
            -fx-text-fill: white;
            -fx-font-size: 16px;
            -fx-padding: 10 25;
            -fx-background-radius: 20;
            -fx-border-radius: 20;
            -fx-border-color: transparent;
            -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 8, 0.3, 0, 2);" />

		<!-- Cancel Button to cancel the operation -->
		<Button text="Cancel" onAction="#handleCancel" style="
            -fx-background-color: #ff4500;
            -fx-text-fill: white;
            -fx-font-size: 16px;
            -fx-padding: 10 25;
            -fx-background-radius: 20;
            -fx-border-radius: 20;
            -fx-border-color: transparent;
            -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 8, 0.3, 0, 2);" />
	</HBox>
</VBox>
